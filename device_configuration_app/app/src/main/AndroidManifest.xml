<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          
    package="com.unisalento.iotlab.deviceconfigurationservice"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19"/>

    <uses-permission android:name="android.permission.INTERNET"/>



    <application
        android:allowBackup="true"
        android:name="com.unisalento.iotlab.deviceconfigurationservice.app.AppController"
        android:icon="@mipmap/icon"
        android:label="@string/app_name">

        <activity
            android:name=".activity.LoginActivity"
            android:label="Device Configuration Service"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <activity
            android:name=".activity.ConfigMenuActivity"
            android:label="Configuration Service Menu">

        </activity>

        <activity
            android:name=".activity.UserActivity"
            android:label="Identificazione utente">

        </activity>

        <activity
            android:name=".activity.BuildingsActivity"
            android:label="Edifici Utente">

        </activity>

        <activity
            android:name=".activity.FloorsActivity"
            android:label="Piani dell'Edificio">

        </activity>

        <activity
            android:name=".activity.RoomsActivity"
            android:label="Stanze del Piano">

        </activity>

        <activity
            android:name=".activity.DeviceConfigActivity"
            android:label="Configurazione Dispositivo">

        </activity>

        android:supportsRtl="true"
        android:theme="@style/AppTheme">
    </application>


</manifest>
